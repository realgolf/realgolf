{
	"name": "@realgolf/realgolf",
	"version": "3.18.2",
	"private": true,
	"description": "realgolf.games: The first and only trainings platform for golfers",
	"repository": {
		"type": "git",
		"url": "https://github.com/realgolf/realgolf"
	},
	"keywords": [
		"games",
		"mongodb",
		"svelte",
		"crowdin",
		"golf",
		"sveltekit",
		"realgolf",
		"realgolfgames",
		"training",
		"trainingsplatform"
	],
	"author": {
		"name": "Julian Hammer and RealGolf.Games",
		"email": "info@realgolf.games",
		"url": "https://realgolf.games"
	},
	"homepage": "https://realgolf.games",
	"l10n": "src/locales",
	"license": "All-Rights-Reserved",
	"bugs": {
		"url": "https://github.com/realgolf/realgolf/issues"
	},
	"main": "server/app.js",
	"type": "module",
	"scripts": {
		"build": "pnpm run build:kit && pnpm run build:server",
		"build:kit": "vite build",
		"build:kit:dev": "vite build --watch",
		"build:server": "tsc server/app.ts --esModuleInterop --target esnext --moduleResolution node",
		"build:server:dev": "tsc server/app.ts --esModuleInterop --target esnext --moduleResolution node --watch",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"commit": "git add . && git-cz && git push",
		"dev": "vite dev",
		"extract": "svelte-i18n extract \"src/**/*.svelte\" src/locales/en.json",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"preview": "vite preview",
		"release": "standard-version",
		"server": "node server/app.js",
		"server:dev": "nodemon server/app.js",
		"start": "pnpm run build && pnpm run server",
		"test": "jest",
		"test:watch": "jest --watchAll",
		"test:coverage": "jest --coverage"
	},
	"devDependencies": {
		"@sveltejs/kit": "^2.5.18",
		"@sveltejs/vite-plugin-svelte": "^3.1.1",
		"@types/bcrypt": "^5.0.2",
		"@types/dompurify": "^3.0.5",
		"@types/express": "^4.17.21",
		"@types/jest": "^29.5.12",
		"@types/js-cookie": "^3.0.6",
		"@types/jsonwebtoken": "^9.0.6",
		"@types/node": "^22.0.0",
		"@types/nodemailer": "^6.4.15",
		"@types/uuid": "^10.0.0",
		"@typescript-eslint/eslint-plugin": "^7.18.0",
		"commitizen": "^4.3.0",
		"concurrently": "^8.2.2",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^9.8.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.43.0",
		"jest": "^29.7.0",
		"jest-environment-jsdom": "^29.7.0",
		"nodemon": "^3.1.4",
		"prettier": "^3.3.3",
		"prettier-plugin-svelte": "^3.2.6",
		"standard-version": "^9.5.0",
		"svelte": "^4.2.18",
		"svelte-check": "^3.8.5",
		"svelte-eslint-parser": "^0.41.0",
		"svelte-fa": "^4.0.2",
		"svelte-jester": "^5.0.0",
		"ts-jest": "^29.2.3",
		"tslib": "^2.6.3",
		"typescript": "^5.5.4",
		"vite": "^5.3.5"
	},
	"dependencies": {
		"@fortawesome/free-brands-svg-icons": "^6.6.0",
		"@fortawesome/free-regular-svg-icons": "^6.6.0",
		"@fortawesome/free-solid-svg-icons": "^6.6.0",
		"@sveltejs/adapter-node": "^5.2.0",
		"@typescript-eslint/parser": "^8.0.0",
		"@typescript-eslint/type-utils": "^8.0.0",
		"@typescript-eslint/utils": "^8.0.0",
		"autoprefixer": "^10.4.19",
		"bcrypt": "^5.1.1",
		"dompurify": "^3.1.6",
		"dotenv": "^16.4.5",
		"express": "^4.19.2",
		"js-cookie": "^3.0.5",
		"jsonwebtoken": "^9.0.2",
		"lint": "^1.1.2",
		"mongoose": "^8.5.2",
		"nanoid": "^5.0.7",
		"nodemailer": "^6.9.14",
		"postcss": "^8.4.40",
		"postcss-safe-parser": "^7.0.0",
		"sass": "^1.77.8",
		"socket.io": "^4.7.5",
		"socket.io-client": "^4.7.5",
		"svelte-i18n": "^4.0.0",
		"tailwindcss": "^3.4.7",
		"uuid": "^10.0.0"
	},
	"packageManager": "pnpm@9.1.2+sha512.127dc83b9ea10c32be65d22a8efb4a65fb952e8fefbdfded39bdc3c97efc32d31b48b00420df2c1187ace28c921c902f0cb5a134a4d032b8b5295cbfa2c681e2",
	"config": {
		"commitizen": {
			"path": "cz-conventional-changelog"
		}
	}
}
